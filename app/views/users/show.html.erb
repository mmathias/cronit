<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.calendars.any? %>
      <h3>Calendars (<%= @user.calendars.count %>)</h3>
      <ol class="calendars">
        <%= render @calendars %>
      </ol>
      <%= will_paginate @calendars %>
    <% end %>
  </div>
</div>